<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.server.mapper.ChatRelationMapper">
    <select id="findChatRelationsByUid" resultType="com.example.server.entity.ChatRelation">
        SELECT uid, chatPartner, time
        FROM chat_relation
        WHERE uid = #{uid}
    </select>
</mapper>